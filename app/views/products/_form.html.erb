<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :affiliate_url %>
    <%= f.text_field :affiliate_url, class: "form-control", placeholder: "i.e. Link to Amazon" %>
  </div>

  <div class="form-group">
    <%= f.label :download_url %>
    <%= f.text_field :download_url, class: "form-control", placeholder: "Use for Downloads" %>
  </div>

  <div class="form-group">
    <%= f.label :features %>
    <%= f.text_field :features, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price_in_cents, "Price in Cents ($109.00 = 10900 etc.)" %>
    <%= f.number_field :price_in_cents, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image_url_string %>
    <%= f.text_field :image_url_string, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :featured %>
    <%= f.check_box :featured %> <small>Not being used yet</small>
  </div>
  <div class="form-actions">
    <%= f.submit class: "btn btn-default btn-lg" %>
  </div>
<% end %>
