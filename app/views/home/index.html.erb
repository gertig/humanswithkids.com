<%# FEATURED PAGES %>
<div class="row">

  <% @posts.each do |post| %>
    
    
    <div class="col-md-6">
      
      <%= link_to blogpost_path(post), class: "dont-decorate" do %>
        <article class="post-container featured-post">
          <div class="post-feature-image" style="background-image: url('<%= post.image_url_string %>');"></div>

          <h3 class="featured-post-title"><%= post.title %></h3>

          <span class="post-date">Written by <%= post.author %> on <%= post.published_on %></span>

          <div class="post-content">
            <p>
              <% if !post.meta_description.blank? %>
                <%= CGI.unescapeHTML(strip_tags(markdown(post.meta_description).to_html.html_safe).truncate(300, :separator => ' ')) %>
              <% else %>  
                <%= CGI.unescapeHTML(strip_tags(markdown(post.content).to_html.html_safe).truncate(300, :separator => ' ')) %>
              <% end %>
            </p>
          </div>

        </article>
      <% end %>

    </div>

  <% end %>

  <div id="post-navigation" class="clearfix" >
    <%#= link_to "â† More Posts", archives_path, class: "previous-post" %>
    <%= link_to "Read what we write", archives_path, class: "read-our-blog" %>
  </div>

</div>